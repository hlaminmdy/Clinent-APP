<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestFragment">

    <!-- TODO: Update blank fragment layout -->
  <LinearLayout
      android:layout_margin="@dimen/padding_20"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/container1" />


      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/request"
          android:layout_gravity="center"/>

      <TextView
          android:id="@+id/seriesname"
          style="@style/TextViewStyle"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:paddingLeft="10dp"
          android:text="Movie or Series name" />

      <EditText
          style="@style/TextStyle"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:id="@+id/edtname"
          android:background="@drawable/edtbg"
          android:hint="Movie or Seires Name"
          android:paddingLeft="10dp"/>

      <TextView
          android:id="@+id/seriesimage"
          style="@style/TextViewStyle"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:paddingLeft="10dp"
          android:text="Movie or Series image" />

      <EditText
          style="@style/TextStyle"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:id="@+id/edtimage"
          android:background="@drawable/edtbg"
          android:hint="Movie or Series image"
          android:paddingLeft="10dp"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <Button
              android:textAllCaps="false"
              android:id="@+id/btnsave"
              android:layout_margin="@dimen/padding_10"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="20dp"
              android:layout_weight="1"
              android:text="Request"
              android:background="@color/successColor"
              android:textColor="@color/color_white"
              android:drawableLeft="@drawable/ic_movieres"
              android:drawableTint="@color/color_white"/>

          <Button
              android:textAllCaps="false"
              android:id="@+id/btncanel"
              android:layout_margin="@dimen/padding_10"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="20dp"
              android:layout_weight="1"
              android:text="Cancel"
              android:background="@color/red"
              android:textColor="@color/color_white"
              android:drawableLeft="@drawable/ic_close"
              android:drawableTint="@color/color_white"/>




      </LinearLayout>

      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/container2" />

  </LinearLayout>

</FrameLayout>